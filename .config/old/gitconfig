[credential]
	helper = osxkeychain

[init]
	defaultBranch = main

[core]
	editor = nvim

[merge]
	tool = vimdiff

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    comd = "nvim -d $LOCAL $REMOTE"

[mergetool]
	keepBackup = false

[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
